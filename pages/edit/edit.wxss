/* pages/edit/edit.wxss */
.shown_plane {}

.exhibit_album {
  padding-bottom: 80rpx;
}

.edit_plane {
  padding: 20rpx;
}

.edit_plane .input_box {}

.input_box .actTitle {
  margin-bottom: 10rpx;
  box-shadow: 0px 0px 10px #c9c8c8 inset;
  padding: 5px 10px;
}

.input_box .actDescribe {
  box-shadow: 0px 0px 10px #c9c8c8 inset;
  padding: 5px 10px;
  width: 100%;
  box-sizing: border-box;
}

.description_box {
  display: flex;
  width: 100%;
  padding: 20rpx;
  justify-content: space-between
}

.portrait {
  width: 200rpx;
  height: 200rpx;
}
.portrait image {
  width: 100%;
  height: 100%;
}

.basicInfo {
  width: 520rpx;
}

.basic_title {
  font-size: 44rpx;
}

.basic_date {
  font-size: 32rpx;
}

.basic_location {
  font-size: 34rpx;
}

.detail_describe {
  padding: 10rpx;
  text-align: justify;
}

.album_box {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
}

.album_box .first_bigPic {
  width: 460rpx;
  height: 460rpx;
}

.album_box .vertical_twoPic {}

.vertical_twoPic .twoPic_one, .vertical_twoPic .twoPic_two {
  width: 220rpx;
  height: 220rpx;
}

.vertical_twoPic .twoPic_one {
  margin-bottom: 20rpx;
}

.vertical_threePic {
  display: flex;
  padding: 0 20rpx 20rpx;
  justify-content: space-between;
}

.vertical_threePic>view {
  height: 220rpx;
  width: 220rpx;
}

image {
  background: rgb(228, 247, 176);
  width: 100%;
  height: 100%;
}

.editable {
  position: relative;
}

.editable .icon_delete {
  content: "";
  position: absolute;
  top: -20rpx;
  right: -20rpx;
}