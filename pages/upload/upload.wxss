/* 描述输入框 */
.describe_box {
  border: 1px solid #cccccc;
  padding: 20rpx;
}

.describe_box textarea {
  border-top: 1px solid #cccccc;
  width: 100%;
}

.album_line_box {
  border: 1px solid #cccccc;
  padding: 25rpx 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;
  align-items: center
}

.album_line_box .image_box {
  width: 200rpx;
  height: 200rpx;
}

.image_box .addImg {
  width: 100%;
  height: 100%;
}

.image_box .image {
  width: 100%;
  height: 100%;
}

.selectedDate {
  font-size: 26rpx;
}

.location_box {
  padding: 16rpx 20rpx;
  display: flex;
  justify-content: space-between;
}

.location_wrap {
  
}

.location_wrap .location_icon {
}

.location_wrap .location_txt {
  vertical-align: middle;
  font-size: 30rpx;
}

.location_wrap .location_txt.noloc {
  color: #cccccc;
}